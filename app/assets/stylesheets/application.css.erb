* {
  margin:0; padding:0;
}
header {
  width: 100%;
  height: 100px;
  padding: 5px 0;
  text-align: center;
  background-position: center bottom;
  background-size: cover;
}
header .headline{
    line-height: 100px;
    font-size: 30px;
    text-decoration: underline;
}
.nav-list {
    line-height: 100px;
    list-style: none;
    font-weight: bold;
}
.nav-list-item {
  list-style: none;
  display: inline-block;
  margin: 0 20px;
}

.h2 {
  padding-left: 50px;
  padding-top: 10px;
}

.text {
  padding-top: 30px;
  margin-bottom: 30px;
  color: white;
}

.book {
  background-image: url(<%= asset_path 'book.jpg' %>);
  background-position: center top;
  background-size: cover;
}

.card {
  margin: 0 auto 40px;
  max-width: 376px;
  height: 370px;
}
.card-body p {
  text-align: left;
}

.address {
  padding-top: 60px;
}

.span {
  font-size: 32px;
  color: #000000;
}
