<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="form">
        <h4>ジャンル登録</h4>
        <%= form_with model: @genre, url: admin_genres_path do |f| %>
          <%= f.label :ジャンル名 %>
          <%= f.text_field :name %>
          <%= f.submit "新規登録" %>
        <% end %>
      </div>
    </div>
    <div class="col-12">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル一覧</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre) %></td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
