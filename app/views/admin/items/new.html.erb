<div class="container">
  <div class="row">
    <div class="col-12">
      <h2>商品登録</h2>
      <%= form_with model: @item, url: admin_items_path do |f| %>
        <table class="table">
          <tr>
            <th>商品画像</th>
            <td><%= f.file_field :item_image, accept: 'image/*' %></td>
          </tr>
          <tr>
            <th>商品名</th>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td><%= f.text_field :item_detail %></td>
          </tr>
          <tr>
            <th>税抜価格</th>
            <td><%= f.text_field :price_without_tax %></td>
          </tr>
          <tr>
            <th>販売ステータス</th>
            <td>
              <%= f.radio_button :is_sale_status, :true, checked: true %>
              <%= f.label :is_sale_status, "販売中", {value: :true, style: "display: inline-block;"} %>
              <%= f.radio_button :is_sale_status, :false %>
              <%= f.label :is_sale_status, "販売停止中", {value: :false, style: "display: inline-block;"} %>
            </td>
          </tr>
        </table>
        <div class="form">
          <%= f.submit "新規登録" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
