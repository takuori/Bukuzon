<div class="container">
  <h4>編集画面</h4>
  <%= form_with model: @customer do |customer| %>
    <table class="table">
      <tr>
        <th>名前</th>
        <td><%= @customer.full_name %></td>
      </tr>
      <tr>
        <th>カナ</th>
        <td><%= @customer.kana_full_name %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @customer.postcode %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @customer.phone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </table>
    <div class="edit">
      <%= f.submit "更新", class: "btn btn-success btn-sm" %>
    </div>
  <% end %>
</div>
