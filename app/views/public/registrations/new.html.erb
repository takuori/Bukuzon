<div class="container">
  <div class="row">
    <h2>新規会員登録</h2>
    <div class="col-12">
      <%= render "public/shared/error_messages", resource: resource %>
      <%= form_with model: @customer, url: registration_path(resource_name) do |f| %>
        <table class="table">
          <tr>
            <th><%= f.label :名字 %></th>
            <td><%= f.text_field :last_name %></td>
          </tr>
          <tr>
            <th><%= f.label :名前 %></th>
            <td><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <th><%= f.label :名字（カナ）%></th>
            <td><%= f.text_field :last_name_kana %></td>
          </tr>
          <tr>
            <th><%= f.label :名前（カナ）%></th>
            <td><%= f.text_field :first_name_kana %></td>
          </tr>
          <tr>
            <th><%= f.label :郵便番号%></th>
            <td><%= f.text_field :postcode %></td>
          </tr>
          <tr>
            <th><%= f.label :住所%></th>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <th><%= f.label :電話番号%></th>
            <td><%= f.text_field :phone_number %></td>
          </tr>
          <tr>
            <th><%= f.label :メールアドレス %></th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <th>
              <%= f.label :パスワード %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %>文字以上)</em>
              <% end %><br />
            </th>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <th><%= f.label :パスワード（確認） %></th>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
        </table>
        <div class="actions">
          <%= f.submit "新規登録" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render "public/shared/links" %>
